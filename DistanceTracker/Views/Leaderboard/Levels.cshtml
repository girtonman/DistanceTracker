@using DistanceTracker.Models
@model LevelsViewModel

@{
    ViewData["Title"] = "All Levels";
}

<div class="text-center">
    <div class="row">
        <div class="col">
            <h4 class="text-left">All Levels</h4>
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th class="text-left">Level</th>
                        <th>Runs</th>
                        <th>Last Updated On</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entry in Model.Levels)
                    {
                    <tr>
                        <td class="text-left"><a class="link" href="/Leaderboard/Level?leaderboardid=@entry.ID">@entry.LevelName</a></td>
                        <td>@entry.EntryCount</td>
                        <td>@Formatter.TimeAgoFromUnixTime(@entry.LatestUpdateUTC)</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
